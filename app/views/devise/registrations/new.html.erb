<div class= "main_content">
  <div class="col-md-8 col-md-offset-2">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2>
          <center>Sign Up<center>
          </h2>
        </div>
        <div class="panel-body">
      <div class="row">
        <div class="col-md-12">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

            <div class="form-inputs">

              <div class="form-group">
                <h4>
                  <%= f.input :email, label: "Desired email", error: "Please specify a valid email", required: true, autofocus: true,  input_html: { class: 'form-control' } %>
                </h4>
              </div>

              <div class="form-group">
                <h4>
                  <%= f.input :password, label: "Desired password", error: "Please specify a password with length >= 8", required: true,  input_html: { min: '8', class: 'form-control' } %>
                </h4>
              </div>

              <div class="form-group">
                <h4>
                  <%= f.input :password_confirmation, error: "Passwords do not match", required: true,  input_html: { class: 'form-control' } %>
                </h4>
              </div>
            </div>
            <br>
            <br>
            <br>

            <div class="submit">
              <%= link_to "Back", :back, class: "btn btn-custom pull-left" %> 
            </div>

            <div class="submit">
              <%= f.button :submit, "Sign up", class: 'btn btn-custom pull-right' %>
            </div>
          <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%# CATERGORIES SHOW PAGE - shows the categories and SHOULD be the HOMEPAGE %>
<%# This will show a *CERTAIN* *CLICKED* category %>
<h2><%= @category.name %></h2>
<div id="books.index">
  <% @products.each_slice(3) do |product| %>
    <div class="row">
      <% product.each do |product| %>
        <div class="col-md-3 col-sm-3">
          <div class="title"><%= link_to product.title, product %></div>
          <%= link_to image_tag(product.image_url, alt: product.title, height: 150, width: 225), product %>
          <div class="price"><%= number_to_currency product.price %></div>
          <%= link_to 'Select', product_path(product), class:'btn btn-primary' %>
          <%= button_to 'Add to Cart', :controller => :cart, :action => :add, :id => product %> 
        </div>
      <% end %>
    </div>
  <% end %>
</div>
